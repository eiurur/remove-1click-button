{
  "manifest_version": 2,
  "name": "remove-1click-button",
  "description": "remove 1click in Amazon",
  "version": "0.0.2",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "chrome://favicon/"
  ],
  "content_scripts": [{
    "matches": [
      "https://www.amazon.co.jp/*"
    ],
    "js": [
      "build/js/content.js"
    ],
    "run_at": "document_end"
  }],
  "browser_action": {
    "default_icon": {
      "19": "build/images/icon.png",
      "38": "build/images/icon.png"
    },
    "default_title": "remove-1click-button"
  },
  "icons": {
    "16": "build/images/icon.png",
    "48": "build/images/icon.png",
    "128": "build/images/icon128.png"
  }
}